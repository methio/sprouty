<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Plantopedia</title>
     {{> ressources}}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/plantopedia.css" />
  </head>
  <body>
    <div id="container">
    <div class="grainy-background">

      <!-- Top center sign: SAME STRUCTURE AS SHOP -->
      <div class="page-header">
        <div class="shop-button plantopedia-button">
          <img
            src="/assets/buttons/plain_button_big.svg"
            alt="Plantopedia"
            class="button-bg"
          />
          <span class="button-text">PLANTOPEDIA</span>
        </div>
      </div>

      <!-- Scrollable content -->
      <main class="encyclopedia-content">

        {{#if plant}}

          <a class="back" href="/encyclopedia">Back</a>

          <h1 class="title">{{plant.plant}}</h1>
          <p class="text">{{plant.description}}</p>

          <ul class="info">
            <li><strong>Light:</strong> {{plant.light}}</li>
            <li><strong>Water:</strong> {{plant.water}}</li>
            <li><strong>Temperature:</strong> {{plant.Temperature}}</li>
            <li><strong>Humidity:</strong> {{plant.Humidity}}</li>
            <li><strong>Soil:</strong> {{plant.Soil}}</li>
            <li><strong>Pro tip:</strong> {{plant.[Pro tip]}}</li>
          </ul>

        {{else if disease}}

          <a class="back" href="/encyclopedia">Back</a>

          <h1 class="title">{{disease.disease}}</h1>
          <p class="text">{{disease.description}}</p>

          <h2 class="subtitle">Symptoms</h2>
          <ul class="list">
            {{#each disease.symptoms}}
              <li>{{this}}</li>
            {{/each}}
          </ul>

          <h2 class="subtitle">Treatment</h2>
          <p class="text">{{disease.treatment}}</p>

        {{else}}

          <!-- no extra “Encyclopedia” heading -->

          <h2 class="subtitle">Plants</h2>
          <ul class="toc">
            {{#each encyclopedia.plants}}
              <li>
                <a href="/encyclopedia/plants/{{this.plant}}">
                  {{this.plant}}
                </a>
              </li>
            {{/each}}
          </ul>

          <h2 class="subtitle">Diseases</h2>
          <ul class="toc">
            {{#each encyclopedia.diseases}}
              <li>
                <a href="/encyclopedia/diseases/{{this.encyclopedia_id}}">
                  {{this.disease}}
                </a>
              </li>
            {{/each}}
          </ul>

        {{/if}}

        <div class="bottom-spacer" aria-hidden="true"></div>
      </main>

      {{> menu}}

    </div>
  </body>
</html>
